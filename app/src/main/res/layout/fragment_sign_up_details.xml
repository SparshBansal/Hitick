<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.hitick.app.Fragments.SignUpDetailsFragment">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_first_name"
        android:paddingBottom="@dimen/signup_editText_padding"
        android:paddingTop="@dimen/signup_editText_padding"
        android:paddingLeft="@dimen/signup_editText_padding"
        android:textSize="@dimen/signup_page_font_size" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_last_name"
        android:paddingBottom="@dimen/signup_editText_padding"
        android:paddingTop="@dimen/signup_editText_padding"
        android:paddingLeft="@dimen/signup_editText_padding"
        android:textSize="@dimen/signup_page_font_size" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_email"
        android:paddingBottom="@dimen/signup_editText_padding"
        android:paddingTop="@dimen/signup_editText_padding"
        android:paddingLeft="@dimen/signup_editText_padding"
        android:textSize="@dimen/signup_page_font_size" />

    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/signup_mobile"
        android:paddingBottom="@dimen/signup_editText_padding"
        android:paddingTop="@dimen/signup_editText_padding"
        android:paddingLeft="@dimen/signup_editText_padding"
        android:textSize="@dimen/signup_page_font_size" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="@string/signup_passsword"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/signup_editText_padding"
        android:paddingTop="@dimen/signup_editText_padding"
        android:paddingLeft="@dimen/signup_editText_padding"
        android:textSize="@dimen/signup_page_font_size"/>

    <Button
        android:id="@+id/bSignUp"
        android:layout_marginTop="@dimen/signup_button_margin"
        android:layout_width="@dimen/signup_button_width"
        android:layout_height="@dimen/signup_button_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/flat_selector"
        android:text="@string/signup_button_register" />
</LinearLayout>
